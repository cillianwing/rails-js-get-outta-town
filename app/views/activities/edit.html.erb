<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>
	  <div class="row justify-content-center">
	    <div class="col-sm-4 pt-3">
	      <%= image_tag "global_travel.jpg", class: "img-responsive center-block", style: "width: 100%" %>
	      <div class="info-form border rounded pt-3 px-1">
	        <%= form_for @activity, url: trip_activity_path, action: 'patch', class: "form-inline justify-content-center" do |f| %>

	          <%= render partial: 'form', locals: { f: f } %>

	          <%= f.submit "Update Activity", class: "form-group btn btn-success btn-block" %>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</div>
</div>