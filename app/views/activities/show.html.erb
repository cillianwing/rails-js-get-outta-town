<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid mx-2">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>

		<div class="row justify-content-center">
			<div class="col-4 mx-0 px-0 border border-primary rounded">
				<div class="card">
					<%= image_tag @trip.select_image, class: "card-img-top" %>
				</div>
		   	<div class="card-body">
			   	<p class="card-title text-center font-weight-bold" style="font-size: 18px"><%= @activity.title %><br><%= @activity.start.strftime("%b %-d, %Y %l:%M %p") %> - <%= @activity.end.strftime("%b %-d, %Y %l:%M %p") %></p>
			   	<p class="card-title text-center font-weight-bold">Trip: <%= @trip.title %></p>
			   	<p class="card-title text-center" style="height: 75px">Location: <%= @activity.location %><br><%= @activity.address_1 %><br><%= @activity.address_2 %></p>
		   		<div class="row">
			   		<p class="col card-text text-center" style="height: 75px; overflow-y: auto">Description: <%= @activity.description %></p>
			   	</div>
		   		<div class="row">
				   	<p class="col card-text text-center">Reservation Number:<br><%= @activity.res_num %></p>
				   	<p class="col card-text text-center">Cost:<br><%= number_to_currency(@activity.cost) %></p>
			   	</div>
		   		<div class="row">
			   		<p class="col card-text text-center" style="height: 50px; overflow-y: auto">Requirements: <%= @activity.requirements %></p>
			   	</div>			  			   	
					<div class="row my-2">
						<%= link_to '<button class="btn btn-warning btn-block" type="button">Edit Activity</button>'.html_safe, edit_trip_activity_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
						<%= link_to '<button class="btn btn-success btn-block" type="button">Add New Activity</button>'.html_safe, new_trip_activity_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
			   	</div>
			   	<div class="row my-2">
						<%= link_to '<button class="btn btn-info btn-block" type="button">All Activities</button>'.html_safe, trip_activities_path, class: "col mx-auto", style: "text-decoration: none" %>
					</div>
					<p class="mb-0">To delete this activity from the trip, <%= link_to "click here.", trip_activity_path(@trip, @activity), method: :delete, data: { confirm: "Are you sure you wish to delete this activity?" }%></p>
		   	</div>
	   	</div>
		</div>
	</div>
</div>
