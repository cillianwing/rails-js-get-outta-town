		<%= form_for(@user, url: login_path, method: :post, :html => {class: "form-inline my-2 my-lg-0"}) do |f| %>
	    <%= f.email_field :email, class: "form-control mr-sm-2", placeholder: "Email" %>
	    <%= f.password_field :password, class: "form-control mr-sm-2", placeholder: "Password" %>
		  <%= f.submit "Log In", class: "btn btn-outline-light m-1 my-sm-0" %>
	  <% end %>
    <input id="sign-up" class="btn btn-success m-1 my-sm-0" type="button" value="Sign Up">
  </div>
