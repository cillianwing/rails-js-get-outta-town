<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>
		<div class="row justify-content-center">
			<% if @stops.length == 0 %>
				<%= link_to '<button class="btn btn-info btn-block my-1" type="button">Add New Stop</button>'.html_safe, new_trip_stop_path(@trip), id: "new-stop", style: "text-decoration: none" %>
			<% else %>
				<% @stops.each_with_index do |stop, index| %>
					<div class="col-sm-4 border border-primary rounded">
						<div class="card">
							<%= image_tag @trip.select_image, class: "card-img-top" %>
						</div>
					   <div class="card-body">
					   	<strong><p class="card-title text-center"><%= stop.location %>: <%= stop.start.strftime("%b %-d, %Y") %> - <%= stop.end.strftime("%b %-d, %Y") %></p></strong>
					   		<div class="row">
							   	<p class="col card-text text-center">Restrictions: <%= stop.restrictions %></p>
						   	</div>	   	
					   </div>
					</div>
					<% if index + 1 % 3 == 0 %>
						</div><div class="row">
					<% elsif index == @stops.length %>
						</div>
					<% end %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>