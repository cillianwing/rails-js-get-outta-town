<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 mx-auto mt-3">
      <%= image_tag "global_travel.jpg", class: "img-responsive center-block", style: "width: 100%" %>
      <div class="info-form border rounded pt-3">
        <%= form_for @user, url: edit_user_path, action: 'patch', class: "form-inline justify-content-center" do |f| %>

					<div class="form-group px-2">
					  <%= f.label :email, "Email:" %>
					  <%= f.email_field :email, class: "form-control" %>
					</div>

					<div class="form-group px-2">
					  <%= f.label :name, "Name: " %>
					  <%= f.text_field :name, class: "form-control" %>
					</div>

					<div class="form-group px-2">
					  <%= f.label :location, "Location: " %>
					  <%= f.text_field :location, class: "form-control" %>
					</div>

					<div class="form-group px-2">
					  <%= f.label :bio, "Biography:" %>
					  <%= f.text_area :bio, class: "form-control" %>
					</div>

					<%= f.hidden_field :password, value: @user.password_digest %>

          <%= f.submit "Update User", class: "form-group btn btn-success btn-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

