<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>
		<div class="row justify-content-center">
			<div class="col-sm-4 mx-2 mt-3 border border-info rounded">
				<h4 class="form-inline justify-content-center py-3" style="color: teal"><i class="fas fa-user-cog"></i> User Profile</h4>
					<div class="form-group px-2">
						<p>Email:</p>
						<input disabled class="form-control" value="<%= @user.email %>" disabled></input>
					</div>
					<div class="form-group px-2">
						<p>Name:</p>
						<input disabled class="form-control" value="<%= @user.name %>" disabled></input>
					</div>
					<div class="form-group px-2">
						<p>Location:</p>
						<input class="form-control" value="<%= @user.location %>" disabled></input>
					</div>
					<div class="form-group px-2">
						<p>Biography:</p>
						<textarea rows="3" class="form-control" disabled><%= @user.bio %></textarea>
					</div>										

	      <%= link_to '<button class="btn btn-info btn-block my-1" type="button">Edit User</button>'.html_safe, edit_user_path, style: "text-decoration: none" %>
	      <%= link_to '<button class="btn btn-danger btn-block mt-1 mb-3" type="button">Delete User</button>'.html_safe, user_path, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, style: "text-decoration: none" %>
			</div>

			<div class="col-sm-4 mx-2 mt-3 border border-info rounded">
				<h4 class="form-inline justify-content-center py-3" style="color: teal"><i class="fas fa-user-cog"></i> Trip Statistics</h4>
				<p>Total Trips Taken</p>
				<p>Total Cost of Trips</p>
				<p>Upcoming Trips</p>
				<p>Expected Cost of Trip</p>
				<p>Number of Places Visited</p>
				<p>Past Travelling Partners</p>
			</div>
		</div>

	</div>

</div>