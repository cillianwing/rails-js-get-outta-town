<div class="container-fluid">
  <div class="row">
    <div class="col-sm-4 mx-auto mt-3">
      <%= image_tag "global_travel.jpg", class: "img-responsive center-block", style: "width: 100%" %>

      <div class="info-form border rounded pt-3">

				<% flash.each do |key, value| %>
				  <div class="alert alert-<%= key %> alert-dismissible fade show justify-content-center">
				    <%= value %>
				    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				      <span aria-hidden="true">&times;</span>
				    </button>
				  </div>
				<% end %>

        <%= form_for @user, class: "form-inline justify-content-center" do |f| %>

					<div class="form-group px-2">
					  <%= f.label :email, "Email:" %>
					  <%= f.email_field :email, class: "form-control" %>
					</div>

				  <div class="form-group px-2">
				    <%= f.label :password %>
				    <%= f.password_field :password, class: "form-control" %>
				  </div>

				  <div class="form-group px-2">
				    <%= f.label :password_confirmation, "Confirm Password" %><br />
				    <%= f.password_field :password_confirmation, class: "form-control" %>
				  </div>

					<div class="form-group px-2">
					  <%= f.label :name, "Name: " %>
					  <%= f.text_field :name, class: "form-control" %>
					</div>

					<div class="form-group px-2">
					  <%= f.label :location, "Location: " %>
					  <%= f.text_field :location, class: "form-control" %>
					</div>

					<div class="form-group px-2">
					  <%= f.label :bio, "Biography:" %>
					  <%= f.text_area :bio, class: "form-control" %>
					</div>

          <%= f.submit "Update User", class: "form-group btn btn-success btn-block" %>

	        <p class="login-callout mt-3">
	          Already have an account? <%= link_to "Log in.", login_path %>
	        </p>
	        
        <% end %>
      </div>
    </div>
  </div>
</div>
