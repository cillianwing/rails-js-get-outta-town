<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>
		<%= render partial: '/shared/js_divs', locals: { user: @user } %>
	  <div class="row justify-content-center">
	    <div class="col-sm-4 pt-3">
	      <%= image_tag "global_travel.jpg", class: "img-responsive center-block", style: "width: 100%" %>
	      <div class="info-form border rounded pt-3 px-1">

          <% if @accommodation.errors.any? %>
            <% @accommodation.errors.full_messages.each do |message| %>
              <div class="alert alert-danger alert-dismissible fade show justify-content-center mx-auto" style="width: 95%">
                <%= message %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% end %>
          <% end %>

	        <%= form_for @accommodation, url: trip_accommodations_path, action: 'post', class: "form-inline justify-content-center" do |f| %>

	          <%= render partial: 'form', locals: { f: f } %>

	          <%= f.submit "Add Accommodation", class: "form-group btn btn-success btn-block" %>
	          <p class="mt-3 ml-2">* Required fields</p>
	        <% end %>
	      </div>
	    </div>
	  </div>
	</div>
</div>