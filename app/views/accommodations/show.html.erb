<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid mx-2">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>
		<%= render partial: '/shared/js_divs', locals: { user: @user } %>

		<div class="row justify-content-center">
			<div class="col-4 mx-0 px-0 border border-primary rounded">
				<div class="card">
					<%= image_tag @trip.select_image, class: "card-img-top" %>
				</div>
		   	<div class="card-body">
			   	<p class="card-title text-center font-weight-bold" style="font-size: 18px"><%= @accommodation.name %><br><%= @accommodation.check_in.strftime("%b %-d, %Y %l:%M %p") %> - <%= @accommodation.check_out.strftime("%b %-d, %Y %l:%M %p") %></p>
			   	<p class="card-title text-center font-weight-bold">Trip: <%= @trip.title %></p>
			   	<p class="card-title text-center" style="height: 75px;">Location: <%= @accommodation.location %><br><%= @accommodation.address_1 %><br><%= @accommodation.address_2 %></p>
		   		<div class="row">
			   		<p class="col card-text text-center">Type: <%= @accommodation.acc_type %></p>
			   	</div>
		   		<div class="row">
				   	<p class="col card-text text-center">Booking Number:<br><%= @accommodation.booking_num %></p>
				   	<p class="col card-text text-center">Cost:<br><%= number_to_currency(@accommodation.cost) %></p>
			   	</div>		  			   	
					<div class="row my-2">
						<%= link_to '<button class="btn btn-warning btn-block" type="button">Edit Acc.</button>'.html_safe, edit_trip_accommodation_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
						<%= link_to '<button class="btn btn-success btn-block" type="button">Add New Acc.</button>'.html_safe, new_trip_accommodation_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
			   	</div>
			   	<div class="row my-2">
						<%= link_to '<button class="btn btn-info btn-block" type="button">All Accommodations</button>'.html_safe, trip_accommodations_path, class: "col mx-auto", style: "text-decoration: none" %>
					</div>
					<p class="mb-0">To delete this accommodation from the trip, <%= link_to "click here.", trip_accommodation_path(@trip, @accommodation), method: :delete, data: { confirm: "Are you sure you wish to delete this accommodation?" }%></p>
		   	</div>
	   	</div>
		</div>
	</div>
</div>
