<div class="wrapper">
	<%= render partial: '/shared/sidebar', locals: { user: @user } %>

	<div class="container-fluid mx-2">
		<%= render partial: '/shared/topnav', locals: { user: @user } %>

		<div class="row justify-content-center" style="height: 525px">
			<div class="col-4 mx-0 px-0 border border-primary rounded">
				<div class="card" style="height: 275px">
					<%= image_tag @trip.select_image, class: "card-img-top", style: "height: 100%" %>
				</div>
		   	<div class="card-body">
			   	<p class="card-title text-center text-dark font-weight-bold" style="font-size: 18px; height: 50px"><%= @trip.title %>:<br><%= @trip.start.strftime("%b %-d, %Y") %> - <%= @trip.end.strftime("%b %-d, %Y") %></p>
		   		<div class="row">
			   		<p class="col card-text text-center" style="height: 50px; overflow-y: auto"><%= @trip.description %></p>
			   	</div>
			   	<div class="row">
			   		<p class="col card-text mx-auto text-center" style="height: 25px">Stops: <%= @trip.stops.length %></p>
			   		<p class="col card-text mx-auto text-center" style="height: 25px">Flights: <%= @trip.flights.length %></p>
			   	</div>
			   	<div class="row">
			   		<p class="col card-text text-center" style="height: 25px">Activities: <%= @trip.activities.length %></p>
			   		<p class="col card-text text-center" style="height: 25px">Accommodations: <%= @trip.accommodations.length %></p>
			   	</div>
			   	<div style="height: 50px; overflow-y: auto">				   	
				   	<p class="col card-text text-center">Travellers: <%= @trip.travellers.join(", ") %></p>				   	
			   	</div>
					<div class="row my-2">
						<%= link_to '<button class="btn btn-warning btn-block" type="button">Edit Trip</button>'.html_safe, edit_user_trip_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
						<%= link_to '<button class="btn btn-success btn-block" type="button">Add New Trip</button>'.html_safe, new_user_trip_path, class: "col-6 mx-auto", style: "text-decoration: none" %>
			   	</div>
			   	<div class="row my-2">
						<%= link_to '<button class="btn btn-info btn-block" type="button">All Trips</button>'.html_safe, user_trips_path, class: "col mx-auto", style: "text-decoration: none" %>
					</div>			   	
		   	</div>
	   	</div>
		</div>
	</div>
</div>



